<p id="notice"><%= notice %></p>

<h1>Librarians</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Profile Pic</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone No.</th>
    </tr>
  </thead>

  <tbody>
    <% @librarians.each do |librarian| %>
      <tr>
        <td><%= image_tag url_for(librarian.image), size: "64" if librarian.image.attached? %></td>
        <td><%= librarian.name %></td>
        <td><%= librarian.email %></td>
        <td><%= librarian.phone_no %></td>
        
        <td><%= link_to 'Show', librarian %></td>
        <td><%= link_to 'Edit', edit_librarian_path(librarian) %></td>
        <td><%= link_to 'Destroy', librarian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


